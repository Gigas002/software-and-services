{
    "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.34/schema.json",
    "app_specific_configuration_path": "$Env:USERPROFILE/applications.json",
    "animation": {
        "enabled": true,
        "fps": 60
    },
    "window_hiding_behaviour": "Cloak",
    "cross_monitor_move_behaviour": "Insert",
    "default_workspace_padding": 5,
    "default_container_padding": 5,
    "border": true,
    "border_width": 3,
    "theme": {
        "palette": "Catppuccin",
        "name": "Mocha",
        "unfocused_border": "Pink",
        "bar_accent": "Pink"
    },
    "transparency": true,
    "transparency_alpha": 220,
    "stackbar": {
        "height": 40,
        "mode": "OnStack",
        "tabs": {
            "width": 300
        }
    },
    "monitors": [
        {
            "workspaces": [
                {
                    "name": "1",
                    "layout": "BSP"
                },
                {
                    "name": "2",
                    "layout": "BSP"
                },
                {
                    "name": "3",
                    "layout": "BSP"
                },
                {
                    "name": "4",
                    "layout": "BSP"
                },
                {
                    "name": "5",
                    "layout": "BSP"
                },
                {
                    "name": "6",
                    "layout": "BSP"
                },
                {
                    "name": "7",
                    "layout": "BSP"
                },
                {
                    "name": "8",
                    "layout": "BSP"
                },
                {
                    "name": "9",
                    "layout": "BSP"
                }
            ]
        }
    ]
}